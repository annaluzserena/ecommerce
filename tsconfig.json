{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "app/routes/_index.jsx", "app/routes/products._index.jsx", "app/routes/products.$productId.jsx", "app/routes/products.new.jsx", "app/routes/products.jsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
